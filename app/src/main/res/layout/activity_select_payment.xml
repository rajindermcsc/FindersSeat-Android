<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:layout_margin="12dp"
    android:layout_marginTop="13dp"
    android:background="@drawable/rect_igniter_plus_corner_white">
    <!--android:background="@drawable/gradient_rewind"-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rlt_tutorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"
        android:background="@color/text_light">

        <androidx.viewpager.widget.ViewPager
            android:visibility="gone"
            android:id="@+id/vp_igniter_plus"
            android:layout_width="match_parent"
            android:layout_height="260dp" />

        <com.websoftquality.findersseat.views.customize.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:padding="15dp" />

        <com.obs.CustomTextView
            android:id="@+id/tv_igniter_plus_title"
            style="@style/proximanova_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/header_igniter_plus"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlt_tutorial">

        <LinearLayout
            android:id="@+id/price_details"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <RelativeLayout
                android:id="@+id/llt_life_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:id="@+id/rlt_life_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/tv_life_book"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/bottom_line"
                    android:paddingTop="10dp">

                    <com.obs.CustomTextView
                        android:id="@+id/tv_life_time"
                        style="@style/proximanova_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Life Time"
                        android:textColor="@color/text_light_gray"
                        android:textSize="20sp" />

                    <com.obs.CustomTextView
                        android:id="@+id/tv_tife"
                        style="@style/proximanova_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_life_time"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="$ 500"
                        android:textColor="@color/text_light_gray"
                        android:textSize="16sp" />





                </RelativeLayout>

                <com.obs.CustomTextView
                    android:id="@+id/tv_life_book"
                    style="@style/proximanova_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/oval_blue_btn"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/best_value"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="invisible" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/llt_twelve_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:id="@+id/rlt_twelve_month"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_one_year_book"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/bottom_line"
                    android:paddingTop="10dp">

                    <com.obs.CustomTextView
                        android:id="@+id/tv_twelve_month"
                        style="@style/proximanova_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Yearly"
                        android:textColor="@color/text_light_gray"
                        android:textSize="20sp" />

                    <com.obs.CustomTextView
                        android:id="@+id/tv_per_year"
                        style="@style/proximanova_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_twelve_month"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="$ 90.5"
                        android:textColor="@color/text_light_gray"
                        android:textSize="16sp" />





                </RelativeLayout>

                <com.obs.CustomTextView
                    android:id="@+id/tv_one_year_book"
                    style="@style/proximanova_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/oval_blue_btn"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/best_value"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/llt_six_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:id="@+id/rlt_six_month"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_six_month_book"
                    android:layout_marginTop="-10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rect_blue_border"
                    android:paddingTop="10dp">

                    <com.obs.CustomTextView
                        android:id="@+id/tv_six_month"
                        style="@style/proximanova_bold"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Monthly"
                        android:textColor="@color/blue1"
                        android:textSize="20sp" />

                    <com.obs.CustomTextView
                        android:id="@+id/tv_per_six_month"
                        style="@style/proximanova_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_six_month"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="$ 7.99"
                        android:textColor="@color/blue1"
                        android:textSize="16sp" />



                </RelativeLayout>

                <com.obs.CustomTextView
                    android:id="@+id/tv_six_month_book"
                    style="@style/proximanova_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/oval_blue_btn"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/most_popular"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llt_one_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dp">

                <View
                    android:visibility="gone"
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp" />

                <RelativeLayout
                    android:id="@+id/rlt_one_month"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/tv_one_month_book"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/bottom_line"
                    android:paddingTop="10dp">

                    <com.obs.CustomTextView
                        android:id="@+id/tv_one_month"
                        style="@style/proximanova_bold"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Weekly"
                        android:textColor="@color/text_light_gray"
                        android:textSize="20sp" />

                    <com.obs.CustomTextView
                        android:id="@+id/tv_per_month"
                        style="@style/proximanova_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_one_month"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="$ 3"
                        android:textColor="@color/text_light_gray"
                        android:textSize="16sp" />




                </RelativeLayout>

                <com.obs.CustomTextView
                    android:id="@+id/tv_one_month_book"
                    style="@style/proximanova_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rect_accent_btn"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/best_value"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="invisible" />
            </RelativeLayout>

        </LinearLayout>

        <com.obs.CustomButton
            android:id="@+id/btn_continue"
            style="@style/proximanova_semibold"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/price_details"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/oval_gradient_blue_btn"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="@string/continue_btn"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>
