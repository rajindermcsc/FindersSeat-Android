<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/llt_login_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.obs.CustomTextView
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:text="Get Started"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <com.obs.CustomTextView
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="50dp"
                android:gravity="center_vertical"
                android:text="Sign Up to get started finding your partner"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <com.obs.CustomEditText
                android:id="@+id/edt_first_name"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/first_name"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:textColor="@color/black_text_color"
                android:textColorHint="@color/quantum_black_hint_text"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:textSize="15sp"
                android:theme="@style/EditTextTheme"
                android:windowSoftInputMode="stateVisible" />


            <com.obs.CustomEditText
                android:id="@+id/edt_last_name"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/last_name"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:textColor="@color/black_text_color"
                android:textColorHint="@color/quantum_black_hint_text"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:textSize="15sp"
                android:theme="@style/EditTextTheme"
                android:windowSoftInputMode="stateVisible" />


            <com.obs.CustomEditText
                android:id="@+id/edt_user_name"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/username"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:textColor="@color/black_text_color"
                android:textColorHint="@color/quantum_black_hint_text"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:textSize="15sp"
                android:theme="@style/EditTextTheme"
                android:windowSoftInputMode="stateVisible" />

            <com.obs.CustomEditText
                android:id="@+id/edt_email"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:textColor="@color/black_text_color"
                android:textColorHint="@color/quantum_black_hint_text"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:textSize="15sp"
                android:theme="@style/EditTextTheme"
                android:windowSoftInputMode="stateVisible" />

            <Spinner
                android:id="@+id/spinner_sabbath"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp" />

            <Spinner
                android:id="@+id/spinner_state_death"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp" />

            <Spinner
                android:id="@+id/spinner_bible"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp" />


            <com.obs.CustomEditText
                android:id="@+id/edt_bible"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="How many books in the Bible?"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:textColor="@color/black_text_color"
                android:textColorHint="@color/quantum_black_hint_text"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:textSize="15sp"
                android:theme="@style/EditTextTheme"
                android:windowSoftInputMode="stateVisible" />

            <com.obs.CustomEditText
                android:id="@+id/edt_prophet"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of the SDA prophet?"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:textColor="@color/black_text_color"
                android:textColorHint="@color/quantum_black_hint_text"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:textSize="15sp"
                android:theme="@style/EditTextTheme"
                android:windowSoftInputMode="stateVisible" />

            <com.obs.CustomEditText
                android:id="@+id/edt_sda_equivalent"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What is the name of the SDA equivalent to Boy Scouts?"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:textColor="@color/black_text_color"
                android:textColorHint="@color/quantum_black_hint_text"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:textSize="15sp"
                android:theme="@style/EditTextTheme"
                android:windowSoftInputMode="stateVisible" />

            <Spinner
                android:id="@+id/spinner_diet"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp" />

            <Spinner
                android:id="@+id/spinner_ministry"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp" />

            <com.obs.CustomEditText
                android:id="@+id/edt_church"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Which Church do you attend?"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:textColor="@color/black_text_color"
                android:textColorHint="@color/quantum_black_hint_text"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:textSize="15sp"
                android:theme="@style/EditTextTheme"
                android:windowSoftInputMode="stateVisible" />

            <com.obs.CustomEditText
                android:id="@+id/edt_password"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:textColor="@color/black_text_color"
                android:textColorHint="@color/quantum_black_hint_text"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:textSize="15sp"
                android:theme="@style/EditTextTheme"
                android:windowSoftInputMode="stateVisible" />

            <com.obs.CustomEditText
                android:id="@+id/edt_confirm_password"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingBottom="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:textColor="@color/black_text_color"
                android:textColorHint="@color/quantum_black_hint_text"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:textSize="15sp"
                android:theme="@style/EditTextTheme"
                android:windowSoftInputMode="stateVisible" />

            <com.obs.CustomTextView
                android:id="@+id/tv_login_phone"
                style="@style/proximanova_regular"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/oval_btn_gray_border"
                android:gravity="center"
                android:layout_gravity="end"
                android:padding="15dp"
                android:drawableRight="@drawable/arrownextright"
                android:text="LOGIN"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
